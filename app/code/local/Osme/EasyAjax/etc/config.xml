<config>
    <global>
        <models>
            <easyAjax>
                <class>Osme_EasyAjax_Model</class>
            </easyAjax>
            <core>
                <rewrite>
                    <message>Osme_EasyAjax_Model_Core_Message</message>
                </rewrite>
            </core>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <easyAjax_get_json>
                        <class>easyAjax/observer</class>
                        <method>getJson</method>
                    </easyAjax_get_json>
                </observers>
            </controller_action_layout_render_before>
            <controller_response_redirect>
                <observers>
                    <easyAjax_get_json>
                        <class>easyAjax/observer</class>
                        <method>getJson</method>
                    </easyAjax_get_json>
                </observers>
            </controller_response_redirect>
        </events>
    </frontend>
</config>

